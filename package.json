{
  "name": "tyafe",
  "version": "0.0.1",
  "description": "A lightweight, type-first validation library for TypeScript with zero dependencies",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.cts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome lint src",
    "lint:fix": "biome lint --fix src",
    "format": "biome format src",
    "format:fix": "biome format --fix src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test && npm run typecheck && npm run lint && npm run format",
    "release": "npm run prepublishOnly && npm publish"
  },
  "keywords": [
    "typescript",
    "validation",
    "schema",
    "type-safe",
    "validator",
    "runtime-validation",
    "type-inference",
    "parse",
    "lightweight"
  ],
  "author": {
    "name": "Sergio Casado",
    "email": "sercassan@gmail.com",
    "url": "https://github.com/sercrac07"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sercrac07/tyafe.git"
  },
  "bugs": {
    "url": "https://github.com/sercrac07/tyafe/issues"
  },
  "homepage": "https://github.com/sercrac07/tyafe#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "tsdown": "0.20.1",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
